{
  "manifest_version": 2,
  
 "background": {
    "scripts": ["eventPage.js"],
    "persistent": false
  },

  "description": "Post bookmarks from the Chrome omnibox",
  "name": "Pinboard post",
  "omnibox": { "keyword" : "+pin" },
  
  // Do I need http://* or not?
  // I don't think so.
  "permissions": [
    "tabs",
//    "http://*",
    "https://api.pinboard.in/*"
  ],
  "version": "1",
  "minimum_chrome_version": "9",

  // An options page for configuring the password/username
  "options_page": "options.html"
  
  // TODO(rjkroege): icon here. Use a pinboard icon. The pinboard site's favicon
  // for example.
}
